{% extends "gis/kml/base.kml" %}
{% load i18n %}

{% block placemarks %}
  {% for station in station_list %}
  <Placemark>
    <name>{% if station.name %}{{ station.name }}{% else %}{{ station }}{% endif %}</name>
    <id>{{ station.id }}</id>
    <description>
      {% for stype in station.stype.all %}{% if not forloop.first %},{% endif %}{{ stype.descr }}{% endfor %}
      <![CDATA[<br>]]>
      {% blocktrans with owner=station.owner %}
        Owner: {{ owner }}
      {% endblocktrans %}
      <![CDATA[<br><br>]]>
      <![CDATA[<a href='/stations/{{ station.id }}/'>{% trans "Details..." %}</a>]]>
    </description>
    {{ station.point.kml|safe }}
  </Placemark>
  {% endfor %}
{% endblock %}
